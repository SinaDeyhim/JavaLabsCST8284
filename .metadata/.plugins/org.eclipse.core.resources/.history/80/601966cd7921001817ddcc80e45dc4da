package cst8284.shape;
//import java.lang.Math.*;

public class Circle extends BasicShape {
	private double width;
	public Circle() {
		
	}
	
	public Circle(double width) {
		this.width=width;
	}
	
	public Circle(Circle circle) {
		this(circle.getWidth());
	}
	
	public double getArea() {
		return  width*width*Math.PI/4;
	}
	
	public double getPerimeter() {
		return width*Math.PI;
	}
	
	@Override
	public String toString() {
		return ("Circle Overrides BasicShape Overrides " + super.toString());
		
	}
	
	@Override
	public boolean equals(Object obj) {
		return this.getWidth()==((BasicShape)obj).getWidth() && obj instanceof Circle;	
	}
}
